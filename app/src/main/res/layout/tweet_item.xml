<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tweet_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:clickable="true"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/month"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/nine"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/month"
            android:layout_alignTop="@id/month"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="sunny"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_alignLeft="@id/user_name"
            android:layout_marginTop="3dp"
            android:text="23:55"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_alignLeft="@id/month"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:text="英国是个可爱的国家英国是个可爱的国家英国是个可爱的国家英国是个可爱的国家英国是个可爱的国家"
            android:textSize="14dp"/>
        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/text"
            android:layout_alignLeft="@id/month"
            android:layout_marginTop="10dp"
            android:layout_marginRight="23dp"
            android:background="@mipmap/england"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>