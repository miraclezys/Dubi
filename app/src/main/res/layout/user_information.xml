<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Sunny"
            app:expandedTitleMarginStart="120dp"
            app:expandedTitleMarginBottom="60dp"
            app:contentScrim="@color/colorStatus"
            android:background="@color/colorBackground">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/beijing5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/user_pic_img"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/touxiang1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="150dp"/>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_collapseMode="pin">
                <Button
                    android:id="@+id/return_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/t_return_white"
                    android:textColor="@color/colorWhite"/>
                <Button
                    android:id="@+id/follow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="关注"
                    android:textSize="16sp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@android:color/transparent"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/colorBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"/>
                <Button
                    android:id="@+id/fans_num_button"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:text="123"
                    android:textSize="14dp"
                    android:textColor="@color/colorStatus"
                    android:background="@mipmap/touming"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"/>
                <Button
                    android:id="@+id/focus_num_button"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:text="23"
                    android:textSize="14dp"
                    android:textColor="@color/colorStatus"
                    android:background="@mipmap/touming"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"/>
                <Button
                    android:id="@+id/tweets_num_button"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:text="255"
                    android:textSize="14dp"
                    android:textColor="@color/colorStatus"
                    android:background="@mipmap/touming"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="爱学习爱生活"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111111111111111111111111"
                android:textSize="100dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
