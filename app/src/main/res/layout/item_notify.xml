<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="5dp"
        android:clickable="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/card_notify">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/head_pic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/touxiang1"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/head_pic"
                android:layout_alignTop="@id/head_pic"
                android:layout_marginLeft="20dp"
                android:text="sunny"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/head_pic"
                android:layout_below="@+id/user_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="11月27日 23:55"
                android:textSize="16dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/head_pic">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:text="回复"/>
                    <TextView
                        android:id="@+id/at_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#37b6ab"
                        android:text="\@Yathing" />
                    <TextView
                        android:id="@+id/text"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="英国是个可爱的国家那里的景色超级美的，旅馆也很雅致，生活如此多娇"
                        android:textSize="18dp"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>