<?xml version="1.0" encoding="utf-8"?>
<!--Page4. 微博消息的详情页面-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MsgDetailActivity">
    <!--Part1 标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/detail1"
        android:background="@mipmap/beijing2">
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/back"
            android:background="#5db6e9"
            android:id="@+id/backbtn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/backbtn"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#5db6e9"
            android:text="微博详情"/>
    </RelativeLayout>

    <!-- Part2 微博信息部分-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail1"
        android:id="@+id/detail2">
        <ImageView
            android:id="@+id/head_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/touxiang1"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_pic"
            android:layout_alignTop="@id/head_pic"
            android:layout_marginLeft="10dp"
            android:text="sunny"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_pic"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="英国是个可爱的国家"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/head_pic"
            android:layout_below="@id/text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/England"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/head_pic"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_shape"
            android:text="关注"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/picture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="23:55"
            android:textSize="16dp"/>
    </RelativeLayout>

    <!--Part3：评论与点赞部分-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail2"
        android:layout_marginTop="10dp"
        android:background="#eaeaea"
        android:id="@+id/detail3">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="评论"
            android:id="@+id/com_btn"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/com_btn"
            android:id="@+id/com_list">
        </ListView>
    </RelativeLayout>
</RelativeLayout>
